<%= label_tag("Search Term", :term) -%>
<%= text_field_tag :term, nil, :size => 20, :maxlength => 20 %><br />

<%= label_tag("Search Titles", :titles) -%>
<%= check_box_tag :titles, nil, true %><br />

<%= label_tag("Search Authors", :authors) -%>
<%= check_box_tag :authors, nil %><br />

<% if logged_in? -%>
  <%= label_tag("Search Document Bodies", :bodies) -%>
  <%= check_box_tag :bodies, nil %><br />
<% else -%>
  Search on text in document bodies is only allowed for authenticated users.<br />
<% end -%>
