<?xml version="1.0" ?>

<r:RDF xmlns:r="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
       xmlns:a="http://www.w3.org/2000/10/annotation-ns#"
       xmlns:d="http://purl.org/dc/elements/1.1/">
 <r:Description r:about="http://<%= SystemSetting.get("hostname") %>/annotations.xml/<%= @annotation.id %>">
  <r:type r:resource="<%= @annotation.get_type %>"/>
  <a:annotates r:resource="<%= @annotation.annotates %>"/>
  <d:title><%= @annotation.get_tag_value('title') %></d:title>
  <a:context>
    <%= @annotation.get_tag_value('context') %>
  </a:context>
  <d:creator><%= @annotation.get_tag_value('creator') %></d:creator>
  <a:created><%= @annotation.get_tag_value('created') %></a:created>
  <d:date><%= @annotation.get_tag_value('date') %></d:date>
  <a:body r:resource="http://<%= SystemSetting.get("hostname") %>/annotations/<%= @annotation.id %>/body.xml"/>
 </r:Description>
</r:RDF>
