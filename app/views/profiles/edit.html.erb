<h1>Edit Profile Details</h1>

<p>Edit the details of your profile below.</p>

<%= error_messages_for :profile %>

<% form_for :profile, :url => user_profile_path, :html => { :method => :put } do |f| -%>

  <%= render :partial => 'form', :locals => { :f => f } -%>

  <p><%= submit_tag 'Update Profile' %></p>
<% end -%>

<p><%= link_to 'Skip save changes and go to show profile', user_profile_path %></p>
