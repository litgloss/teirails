<h1>View audio file details</h1>

<p>
  <%=h printable_name(@audio_file) %>
  It was created on <%=h @audio_file.created_at %>.
</p>

<p>
  Would you like to <%= link_to 'Listen', stream_audio_file_path, :popup => [ 'Audio Player', 'width=300, height=100' ] %> to the file?
</p>

<h2>Description</h2>

<p>
  <%=h printable_description(@audio_file) %>
</p>

<% if @audio_file.writable_by?(current_user) %>
  <h2>Editing Options</h2>

  <p>
    Would you like to <%= link_to 'edit this audio file', edit_audio_file_path %> or <%= link_to 'delete', audio_file_path,
	    :confirm => "Are you sure?",
            :method => :delete -%> it?
  </p>
<% end %>

<% if @associated_object.class == ContentItem -%>
  <p>
    <%= link_to "Back to #{@associated_object.class.to_phrase}", content_item_path(@content_item) %>
  </p>
<% elsif @associated_object.class == Litgloss -%>
  <p>
    <%= link_to "Back to #{@associated_object.class.to_phrase}",  content_item_litgloss_path(@associated_object.content_item, @associated_object) %>
  </p>
<% end -%>
