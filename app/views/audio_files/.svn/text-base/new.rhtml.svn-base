<h1>New audio file</h1>

<%= error_messages_for :audio_file %>

<% form_for(:audio_file, :url => { :action => 'create' }, :html => { :multipart => true }) do |f| -%>
  <p>
	<p><label for="audio_file_name">Name</label><br />
	<%= text_field 'audio_file', 'name'  %></p>

	<p><label for="audio_file_description">Description</label><br />
	<%= text_field 'audio_file', 'description'  %></p>
	
	<p><label for="audio file">Upload an audio file resource</label><br />
	<%= hidden_field 'audio_file', :audible_type, :value => @audible_object.class.to_s %>
	<%= hidden_field 'audio_file', :audible_id, :value => @audible_id %>

	</p>

	<%= f.file_field :uploaded_data %>

  </p>
  <p>
    <%= submit_tag 'Add File' %>
  </p>
<% end -%>

<p>
  <% if !@audio_file.errors %>
  <%= link_to "Back to #{@audible_object.to_phrase}", :controller => @audible_object.class.table_name, :action => :show, :id => @audible_id %>
  <% end %>
</p>
