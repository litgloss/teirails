<%= f.label(:tei_data, "Select file") -%>
<%= f.file_field :tei_data  %><br />

<% if !@content_item.private_clone? -%>
  <%= f.label(:published) -%>
  <%= f.check_box(:published) -%><br />

  <%= f.label(:protected) -%>
  <%= f.check_box(:protected) -%><br />

  <% if current_user.can_act_as?("administrator") -%>
    <%= label(:system, "System") -%>
    <%= f.check_box( :system) -%><br />
  <% end -%>

  <% if current_user.can_act_as?("editor") -%>
    <%= label(:hide_in_catalog, "Hide in catalog") -%>
    <%= f.check_box( :hide_in_catalog) -%><br />
  <% end -%>
<% end -%>
